source "https://rubygems.org/"

group :test do
  # Gotta have rake for some reason...
  gem "rake"

  # To make minitest's output prettier
  gem "minitest-reporters"

  # Guard for TDD
  gem "guard"
  gem "guard-minitest"

  # Code coverage tools
  gem "coveralls", require: false
  gem "simplecov", require: false
end
